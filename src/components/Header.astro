---
import ThemeSelect from 'virtual:starlight/components/ThemeSelect';

const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
---

<div class="header sl-flex">
  <div class="title-wrapper sl-flex">
    <a href={base} class="site-title sl-flex">
      <svg class="site-logo" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path d="M12 2L2 7v10l10 5 10-5V7L12 2zm0 2.18L19.35 7.5 12 10.82 4.65 7.5 12 4.18zM4 8.83l7 3.5V19.5l-7-3.5V8.83zm9 10.67V12.33l7-3.5V15.5l-7 3.5z"/>
      </svg>
      <span translate="no">CDDing</span>
    </a>
  </div>
  <nav class="header-nav sl-flex">
    <div class="nav-item">
      <a href={`${base}vulkan/`} class="nav-top" aria-current={currentPath.startsWith(`${base}vulkan`) ? 'page' : undefined} aria-expanded="false" aria-controls="dd-vulkan">Vulkan</a>
      <div class="nav-dropdown" id="dd-vulkan" role="menu">
        <a href={`${base}vulkan/`} role="menuitem">Vulkan Spec</a>
      </div>
    </div>
    <div class="nav-item">
      <a href={`${base}cuda/`} class="nav-top" aria-current={currentPath.startsWith(`${base}cuda`) ? 'page' : undefined} aria-expanded="false" aria-controls="dd-cuda">CUDA</a>
      <div class="nav-dropdown" id="dd-cuda" role="menu">
        <a href={`${base}cuda/`} role="menuitem">CUDA Guide</a>
      </div>
    </div>
    <div class="nav-item">
      <a href={`${base}articles/`} class="nav-top" aria-current={currentPath.startsWith(`${base}articles`) ? 'page' : undefined} aria-expanded="false" aria-controls="dd-articles">Articles</a>
      <div class="nav-dropdown" id="dd-articles" role="menu">
        <a href={`${base}articles/gpu-hw-sw/01-introduction/`} role="menuitem">GPU Hardware &amp; Software</a>
        <a href={`${base}articles/graphics-pipeline/`} role="menuitem">A Trip Through the Graphics Pipeline</a>
      </div>
    </div>
  </nav>
  <div class="sl-hidden md:sl-flex print:hidden right-group">
    <ThemeSelect />
    <a href="https://github.com/CDDing" rel="me" class="sl-flex github-link" aria-label="GitHub">
      <svg width="18" height="18" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
      </svg>
    </a>
  </div>
</div>

<script>
  document.querySelectorAll('.nav-item').forEach((item) => {
    const top = item.querySelector('.nav-top');
    const dd = item.querySelector('.nav-dropdown');
    if (!top || !dd) return;

    // Touch: toggle dropdown on tap
    top.addEventListener('click', (e) => {
      if (!window.matchMedia('(hover: none)').matches) return;
      const open = top.getAttribute('aria-expanded') === 'true';
      // Close all others
      document.querySelectorAll('.nav-item .nav-top[aria-expanded]').forEach((t) => t.setAttribute('aria-expanded', 'false'));
      if (!open) {
        e.preventDefault();
        top.setAttribute('aria-expanded', 'true');
      }
    });

    // Hover: sync aria-expanded
    item.addEventListener('mouseenter', () => top.setAttribute('aria-expanded', 'true'));
    item.addEventListener('mouseleave', () => top.setAttribute('aria-expanded', 'false'));
  });

  // Close dropdowns on outside click
  document.addEventListener('click', (e) => {
    if (!(e.target as HTMLElement).closest('.nav-item')) {
      document.querySelectorAll('.nav-item .nav-top[aria-expanded]').forEach((t) => t.setAttribute('aria-expanded', 'false'));
    }
  });
</script>

<style>
  .header {
    gap: var(--sl-nav-gap);
    justify-content: space-between;
    align-items: center;
    height: 100%;
  }

  .title-wrapper {
    overflow: clip;
    padding: 0.25rem;
    margin: -0.25rem;
    min-width: 0;
    flex-shrink: 0;
  }

  .site-title {
    align-items: center;
    gap: 8px;
    font-size: 0.88rem;
    font-weight: 700;
    color: var(--cd-header-text);
    text-decoration: none;
    white-space: nowrap;
  }
  .site-title:hover {
    color: #ffffff;
  }

  .site-logo {
    width: 22px;
    height: 22px;
    fill: var(--cd-header-text);
    flex-shrink: 0;
  }

  .header-nav {
    gap: 0.5rem;
    align-items: center;
  }

  .nav-item {
    position: relative;
  }

  .nav-top {
    color: var(--cd-text-secondary);
    font-size: 0.82rem;
    font-weight: 500;
    text-decoration: none;
    padding: 4px 8px;
    border-radius: 4px;
    transition: color 0.15s, background 0.15s;
    white-space: nowrap;
    display: inline-block;
  }
  .nav-top:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }
  .nav-top:focus-visible {
    outline: 2px solid var(--cd-accent);
    outline-offset: 2px;
  }
  .nav-top[aria-current='page'] {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.12);
  }

  .nav-dropdown {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 140px;
    padding-top: 4px;
    z-index: 100;
  }

  .nav-item:hover .nav-dropdown,
  .nav-top[aria-expanded='true'] + .nav-dropdown {
    display: block;
  }

  .nav-dropdown a {
    display: block;
    padding: 6px 12px;
    font-size: 0.78rem;
    color: var(--cd-text-primary);
    text-decoration: none;
    background: var(--cd-bg-card);
    border: 1px solid var(--cd-border-color);
    border-radius: 6px;
    transition: background 0.15s;
    white-space: nowrap;
  }
  .nav-dropdown a:hover {
    background: var(--cd-bg-hover);
  }
  .nav-dropdown a:focus-visible {
    outline: 2px solid var(--cd-accent);
    outline-offset: -2px;
  }

  .right-group {
    gap: 0.5rem;
    align-items: center;
    flex-shrink: 0;
    margin-inline-start: auto;
  }

  .github-link {
    color: var(--cd-header-text);
    padding: 6px;
    border-radius: 4px;
    transition: background 0.15s;
  }
  .github-link:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
  }

  @media (min-width: 50rem) {
    .header {
      display: grid;
      grid-template-columns: auto auto 1fr auto;
      align-content: center;
    }
  }
</style>
